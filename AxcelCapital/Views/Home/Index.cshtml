@*Contact Us Section*@
<section>
    <div class="container contactUs">
        <h1>Contact Us Today For Your Consultation</h1>

        @using (Html.BeginForm("SubmitQuery", "Home"))
        {
            <div class="form-group row">
                <div class="col-md-6">
                    <label>First Name</label>
                    @Html.TextBoxFor(m => m.firstName, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    <label>Last Name</label>
                    @Html.TextBoxFor(m => m.lastName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    <label>Mobile</label>
                    @Html.TextBoxFor(m => m.mobile, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Company Name</label>
                    @Html.TextBoxFor(m => m.companyName, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    <label>Company Turnover</label>
                    @Html.TextBoxFor(m => m.turnOver, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label>Message</label>
                @Html.TextAreaFor(m => m.message, new { @class = "form-control col-md-12", @rows = "5" })
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>

        }

    </div>
</section>








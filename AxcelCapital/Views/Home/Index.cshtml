<section class="contactUs-section">


    <div id="map"></div>

    <script>
        var map;
        var axcelAddress = { lat: 1.353260, lng: 103.868622 };

        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                zoom: 18,
                center: axcelAddress,
                zoomControl: true,
                scaleControl: true,
                fullscreenControl: true
            });

            var marker = new google.maps.Marker({ position: axcelAddress, map: map });

            var centre;
            var offSetX = 0.25;
            var offSetY = 0;

            var span = map.getBounds().toSpan();

            var newCentre = {
                lat: centre.lat() + span.lat() * offSetY,
                lng: centre.lng() + span.lng() * offSetX
            };

            map.panTo(newCentre);

            //map.panBy(300, 0);
        }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDBcN7lCSyMTCu9hn2PT7xTZizLhGdUsO8&callback=initMap"
            async defer></script>


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @*Script to Change Class on RadioBtn click*@
    <script>
        $(document).ready(function () {
            $('.form-radiobtn').click(function () {
                if ($(this).is(':checked')) {
                    $('label.radiobtn_label')
                        .addClass("radiobtn_label_blue")
                        .removeClass("radiobtn_label");
                }
            });
        });
    </script>

    @*Script to validate if Captcha is selected, if not, display label*@
    <script>
        $(document).on("submit", "form", function (e) {
            var recaptcha = document.getElementById("g-recaptcha-response").value;
            if (recaptcha === "") {
                e.preventDefault();
                console.log("Prevent Default");
                $('#recaptcha-error-msg').show();
                return false;
            }
        });

    </script>

    @*Script to make success message fade*@
    <script>
        $(document).ready(function () {
            var successBar = $('#success-alert');
            if (successBar.is(':visible')) {
                console.log('visible');
                successBar.fadeTo(5000, 500).slideUp(500, function () {
                    $("#success-alert").slideUp(500);
                });
            }
        });

    </script>
}




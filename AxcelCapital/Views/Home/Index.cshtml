@*Contact Us Section*@
<section>
    <div class="container">
        <div class="contactUs">
            <div class="contactUs-title">
                <h2>Contact Us Today For Your Consultation</h2>
            </div>

            @using (Html.BeginForm("SubmitQuery", "Home", new { id = "queryForm" }))
            {
                <div class="contactUs-Form">
                    <div class="form-group row">
                        <div class="col-md-6 col-xs-12">
                            @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", @required = "" })
                            <label class="moving-label">First Name*</label>
                            @*<label class="form-error" id="usernameErrorMsg" ></label>*@
                            @Html.ValidationMessageFor(m => m.firstName, "", new { @class = "form-error" })
                        </div>
                        <div class="col-md-6 col-xs-12">
                            @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", @required = "" })
                            <label class="moving-label">Last Name*</label>
                            @Html.ValidationMessageFor(m => m.lastName, "", new { @class = "form-error" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6 col-xs-12">
                            @Html.TextBoxFor(m => m.email, new { @class = "form-control", @required = "" })
                            <label class="moving-label">Email*</label>
                            @Html.ValidationMessageFor(m => m.email, "", new { @class = "form-error" })
                        </div>
                        <div class="col-md-6 col-xs-12">
                            @Html.TextBoxFor(m => m.mobile, new { @class = "form-control", @required = "" })
                            <label class="moving-label">Mobile*</label>
                            @Html.ValidationMessageFor(m => m.mobile, "", new { @class = "form-error" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6 col-xs-12">
                            @Html.TextBoxFor(m => m.companyName, new { @class = "form-control", @name = "txt_companyName", @required = "" })
                            <label class="moving-label">Company Name</label>
                            @Html.ValidationMessageFor(m => m.companyName, "", new { @class = "form-error" })
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div>
                                <label class="radiobtn_label">Company Turnover</label>
                            </div>
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 col-xs-12">
                                        @Html.RadioButtonFor(m => m.turnOver, "< $1 million", new { @class = "form-radiobtn" }) Less than $1 million
                                    </div>
                                    <div class="col-md-6 col-xs-12">
                                        @Html.RadioButtonFor(m => m.turnOver, "> $1 million", new { @class = "form-radiobtn" }) More than $1 million
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bigTextArea">
                        @Html.TextAreaFor(m => m.message, new { @class = "form-control col-md-12", @rows = "5", @required = "" })
                        <label class="moving-label">Enter your Message*</label>
                    </div>

                    <div class="btn-wrapper">
                        <div class="row">
                            <div class="col-md-6 col-xs-12">
                                <div class="col-xs-12">
                                    <div class="g-recaptcha" data-sitekey="6LfV1HkUAAAAAHtt0_TrIzKWxXIZF5msjauutXfN"></div>
                                </div>
                                <div class="col-xs-12 recaptcha-div">
                                    <span id="recaptcha-error-msg" class="form-error">Please select this field</span>
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12">
                                <button type="submit" class="btn btn-primary" onclick="validateCaptcha()">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>




@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @*Script to Change Class on RadioBtn click*@
    <script>
        $(document).ready(function () {
            $('.form-radiobtn').click(function () {
                if ($(this).is(':checked')) {
                    $('label.radiobtn_label')
                        .addClass("radiobtn_label_blue")
                        .removeClass("radiobtn_label");
                }
            });
        });
    </script>

    @*Script to validate if Captcha is selected, if not, display label*@
    <script>
        function validateCaptcha() {
            var recaptcha = document.getElementById("g-recaptcha-response").value;
            if (recaptcha === "") {
                $('#recaptcha-error-msg').show();
            }
        }
    </script>
}








